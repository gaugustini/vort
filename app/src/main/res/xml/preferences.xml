<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.setting.SettingFragment">

    <PreferenceCategory app:title="@string/general">

        <ListPreference
            app:defaultValue="mhfu"
            app:entries="@array/game_titles"
            app:entryValues="@array/game_values"
            app:key="@string/key_game"
            app:title="@string/game"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="english"
            app:entries="@array/data_language_titles"
            app:entryValues="@array/data_language_values"
            app:key="@string/key_data_language"
            app:title="@string/data_language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/search">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/key_piercing"
            app:title="@string/piercing" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/key_dlc"
            app:title="@string/dlc" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/key_torso"
            app:title="@string/torso" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/key_bad_skill"
            app:title="@string/bad_skill" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display">

        <ListPreference
            android:defaultValue="system"
            app:entries="@array/theme_titles"
            app:entryValues="@array/theme_values"
            app:key="@string/key_theme"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="english"
            app:entries="@array/language_titles"
            app:entryValues="@array/language_values"
            app:key="@string/key_language"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:summary="1.0.0"
            app:title="@string/version" />

    </PreferenceCategory>

</PreferenceScreen>
